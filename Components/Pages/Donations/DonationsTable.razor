    async Task LoadData(LoadDataArgs args)
    {
        isLoading = true;

        await Task.Yield();

        using var db = await ContextFactory.CreateDbContextAsync();
        var query = db.ViewProjects.Where(x => showDisactive || (showDisactive || x.Active == true)).AsQueryable();

        if (!string.IsNullOrEmpty(args.Filter))
            query = query.Where(args.Filter);

        if (!string.IsNullOrEmpty(args.OrderBy))
            query = query.OrderBy(args.OrderBy);

        count = query.Count();

        donations = query.Skip(args.Skip!.Value).Take(args.Top!.Value).ToList();

        if (donations.Count > 0 && selectedProjects.Count == 0)
        {
            selectedProjects = new List<ViewProject> { donations.First() };
            await OnProjectSelected.InvokeAsync(donations.First());
        }

        isLoading = false;
    }

