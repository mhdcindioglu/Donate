@page "/Donations"
@using Donate.Data.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using System.Linq.Dynamic.Core

@attribute [Authorize]

<div class="d-flex">
    <div class="w-50 pe-1">
        <DonationsTable OnDonationSelected="OnDonationSelected" />
    </div>
    <div class="w-50 ps-1">
        <DonationDetailsTable @ref="DonationDetailsTable" />
    </div>
</div>

@code {
    DonationDetailsTable DonationDetailsTable = default!;
    async Task OnDonationSelected(ViewDonation donation) => await DonationDetailsTable.SetDonation(donation);
}
