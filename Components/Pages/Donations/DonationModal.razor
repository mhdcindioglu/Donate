@using Donate.Components.Pages.Users
@using Donate.Data.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using System.Text
@using System.Text.Encodings.Web
@inject NavigationManager NavigationManager

<EditForm Model="_Donation" OnvalidSubmit="OnSave">
    <DataAnnotationsValidator />
    <FormValidation @ref="FormValidation" />

    <div class="row mb-3">
        <div class="col-12 col-md-6">
            <label for="Input.Organization" class="mb-2 text-muted">Organization</label>
            <SelectOrganization @bind-Value="_Donation.OrganizationId" ID="Input.Organization" />
            <ValidationMessage For="@(() => _Donation.OrganizationId)"/>
        </div>

        <div class="col-12 col-md-6">
            <label for="Input.Title" class="mb-2 text-muted">Title</label>
            <InputText @bind-Value="_Donation.Title" id="Input.Title" class="form-control" aria-required="true" placeholder="Food Drive" autofocus />
            <ValidationMessage For="() => _Donation.Title" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 col-md-6">
            <label for="Input.StartDate" class="mb-2 text-muted">Start Date</label>
            <InputDate @bind-Value="_Donation.StartDate" id="Input.StartDate" class="form-control" aria-required="true" @onchange="OnStartDateChanged" />
            <ValidationMessage For="() => _Donation.StartDate" />
        </div>

        <div class="col-12 col-md-6">
            <label for="Input.EndDate" class="mb-2 text-muted">End Date</label>
            <InputDate @bind-Value="_Donation.EndDate" id="Input.EndDate" class="form-control" aria-required="true" @onchange="OnEndDateChanged" />
            <ValidationMessage For="() => _Donation.EndDate" />
        </div>
    </div>

    <div class="mb-3">
        <label for="Input.Description" class="mb-2 text-muted">Description</label>
        <InputTextArea @bind-Value="_Donation.Description" id="Input.Description" class="form-control" placeholder="Description here..." rows="5" />
        <ValidationMessage For="() => _Donation.Description" />
    </div>

    <div class="align-items-center d-flex">
        <button type="submit" class="btn btn-primary mx-auto px-5">@(_Donation.Id == 0 ? "Add" : "Update")</button>
    </div>
</EditForm>

@code {
    [Parameter] public Donation Donation { get; set; } = new();
    [CascadingParameter] public BlazoredModalInstance ModalInstance { get; set; } = default!;
    private Donation _Donation = new();
    FormValidation FormValidation = default!;

    protected override async void OnInitialized()
    {
        if (Donation.Id > 0)
        {
            using var db = await ContextFactory.CreateDbContextAsync();
            var donation = await db.Projects.FirstOrDefaultAsync(x => x.Id == Donation.Id);
            if (donation == null)
            {
                await ModalInstance.CloseAsync(ModalResult.Cancel("NotFound"));
                return;
            }
            else
            {
                Donation = donation.Clone<Donation>()!;
            }
        }

        _Donation = Donation.Clone()!;

        StateHasChanged();
    }

    async Task OnSave()
    {
        var errors = new Dictionary<string, List<string>>();
        FormValidation.ClearErrors();

        using var db = await ContextFactory.CreateDbContextAsync();

        try
        {
            if (_Donation.Id == 0)
            {
                var newProject = new Donation
                    {
                        Title = _Donation.Title.Trim(),
                        Description = _Donation.Description.Trim(),
                        StartDate = _Donation.StartDate.HasValue ? _Donation.StartDate.Value.ToUniversalTime() : null,
                        EndDate = _Donation.EndDate.HasValue ? _Donation.EndDate.Value.ToUniversalTime() : null,
                        OrganizationId = _Donation.OrganizationId,
                    };
                await db.Projects.AddAsync(newProject);
                await db.SaveChangesAsync();

                await ModalInstance.CloseAsync(ModalResult.Ok());
            }
            else
            {
                var projectInDb = await db.Projects.FirstOrDefaultAsync(x => x.Id == _Donation.Id);
                if (projectInDb == null)
                {
                    await ModalInstance.CloseAsync(ModalResult.Cancel("NotFound"));
                    return;
                }
                else
                {
                    projectInDb.Title = _Donation.Title.Trim();
                    projectInDb.Description = _Donation.Description.Trim();
                    projectInDb.StartDate = _Donation.StartDate.HasValue ? _Donation.StartDate.Value.ToUniversalTime() : null;
                    projectInDb.EndDate = _Donation.EndDate.HasValue ? _Donation.EndDate.Value.ToUniversalTime() : null;
                    projectInDb.OrganizationId = _Donation.OrganizationId;

                    db.Projects.Update(projectInDb);
                    await db.SaveChangesAsync();

                    await ModalInstance.CloseAsync(ModalResult.Ok());
                }
            }
        }
        catch (Exception ex)
        {
            ToastSrv.ShowError(ex.Message);
        }
    }

    private void OnStartDateChanged(ChangeEventArgs e)
    {
        var startDate = DateTime.Parse(e.Value.ToString());
        if (_Donation.EndDate.HasValue && startDate > _Donation.EndDate.Value)
            _Donation.EndDate = startDate;
    }

    private void OnEndDateChanged(ChangeEventArgs e)
    {
        var endDate = DateTime.Parse(e.Value.ToString());
        if (_Donation.StartDate.HasValue && endDate < _Donation.StartDate.Value)
            _Donation.StartDate = endDate;
    }
}